{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "ES2019",
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "module": "commonjs",
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
  },
  "include": ["src/**/*.ts", "tests"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
  ]
}
